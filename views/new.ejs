<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-center align-items-center bg-light" style="min-height: 100vh;">
    <div class="col-md-8 col-lg-6">
        <div class="bg-white shadow rounded-4 p-5">
            <h2 class="text-center mb-4 fw-semibold">Create a New Listing</h2>

            <form method="post" action="http://localhost:10000/listings/new" enctype="multipart/form-data" novalidate>
                <div class="row g-4">
                    <!-- Title -->
                    <div class="col-12">
                        <label for="title" class="form-label fw-medium">Title</label>
                        <input type="text" id="title" name="title" class="form-control rounded-3 p-3" placeholder="Enter title" required>
                    </div>

                    <!-- Description -->
                    <div class="col-12">
                        <label for="description" class="form-label fw-medium">Description</label>
                        <textarea id="description" name="description" class="form-control rounded-3 p-3" rows="3" placeholder="Enter description" required></textarea>
                    </div>

                    <!-- Category -->
                    <div class="col-12">
                        <label for="categorySelect" class="form-label fw-medium">Category</label>
                        <select name="category" id="categorySelect" class="form-select rounded-3 p-3" required>
                            <option value="">Select a category</option>
                            <option value="hotel">Hotel</option>
                            <option value="farm">Farm</option>
                            <option value="apartment">Apartment</option>
                            <option value="rental">Rental</option>
                            <option value="beach">Beach</option>
                            <option value="mountain">Mountain</option>
                            <option value="cabin">Cabin</option>
                            <option value="desert">Desert</option>
                            <option value="lake">Lake</option>
                            <option value="tiny-home">Tiny Home</option>
                            <option value="castle">Castle</option>
                            <option value="boat">Boat</option>
                            <option value="treehouse">Treehouse</option>
                            <option value="skiing">Skiing</option>
                            <option value="camping">Camping</option>
                            <option value="luxury">Luxury</option>
                            <option value="city">City</option>
                            <option value="vintage">Vintage</option>
                            <option value="eco">Eco</option>
                            <option value="historic">Historic</option>
                            <option value="island">Island</option>
                        </select>
                    </div>

                    <!-- Image Upload -->
                    <div class="col-12">
                        <label for="listingImage" class="form-label fw-medium">Upload Image</label>
                        <input type="file" name="listingImage" id="listingImage" class="form-control rounded-3 p-3" required>
                    </div>

                    <!-- Price -->
                    <div class="col-md-6">
                        <label for="price" class="form-label fw-medium">Price</label>
                        <input type="text" name="price" id="price" class="form-control rounded-3 p-3" placeholder="Enter price" required>
                    </div>

                    <!-- Location -->
                    <div class="col-md-6">
                        <label for="location" class="form-label fw-medium">Location</label>
                        <input type="text" name="location" id="location" class="form-control rounded-3 p-3" placeholder="Enter location" required>
                    </div>

                    <!-- Country -->
                    <div class="col-12">
                        <label for="country" class="form-label fw-medium">Country</label>
                        <input type="text" name="country" id="country" class="form-control rounded-3 p-3" placeholder="Enter country" required>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-12">
                        <button type="submit" class="btn btn-dark w-100 py-3 rounded-3 fw-semibold">Create Listing</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
